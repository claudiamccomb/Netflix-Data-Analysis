import pandas as pd

movies_df = pd.read_csv("movies_metadata.csv", low_memory = False)

movies_col_subset = movies_df[['budget', 'genres', 'title', 'release_date', 'revenue', 'runtime', 'vote_average']]

import matplotlib.pyplot as plt

# Set the figure style and initalize a new figure
plt.style.use('fivethirtyeight')
fig = plt.figure(figsize=(12,8))

# Create a scatter plot of duration versus release_year
plt.scatter(movies_col_subset["runtime"], movies_col_subset["vote_average"])

# Create a title and axis labels
plt.title("Movie duration by audience rating")
plt.xlabel("Audience Rating")
plt.ylabel("Duration (min)")

plt.show()
